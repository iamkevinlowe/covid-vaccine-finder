{
	"name": "Covid Vaccine Finder",
	"version": "1.0",
	"description": "Checks for available vaccine appointments",
	"permissions": [
		"activeTab",
		"https://*/*",
		"storage",
		"tabs"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["https://*.sandiegocounty.gov/*"],
			"js": [
				"vendor/jquery-3.5.1.min.js",
				"sd_covid.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": ["https://cw.calvax.org/*"],
			"js": ["calvax.js"],
			"run_at": "document_end"
		}
	],
	"manifest_version": 2
}
